<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kclm.owep.dao.UserDao">

    <insert id="save" parameterType="user"
            useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into t_user(id,user_name,password,mobile_phone,real_name,
                           create_date,update_date,last_login_date,status,avatar_url)
        values
        (null,#{userName}, #{password}, #{mobilePhone}, #{realName},
         now(),now(), #{lastLoginDate},
         #{status, typeHandler=org.apache.ibatis.type.EnumOrdinalTypeHandler}, #{avatarUrl})
    </insert>

    <delete id="delete" parameterType="integer">
        delete from t_user where id = #{value}
    </delete>

    <update id="update" parameterType="user">
        update t_user
        <trim prefix="set" suffixOverrides=",">   <!-- 相当于 <set> -->
            <if test="password != null">password = #{password},</if>
            <if test="realName != null">real_name = #{realName},</if>
            <if test="mobilePhone != null">mobile_phone = #{mobilePhone} ,</if>
            <if test="status != null">status = #{status},</if>
            <if test="avatarUrl != null">avatar_url = #{avatarUrl},</if>
            update_date = now()
        </trim>
        where id = #{id}
    </update>

    <select id="findAll" resultType="user">
        select * from t_user
    </select>

    <select id="findById" resultType="user" parameterType="integer">
        select * from t_user where id = #{value}
    </select>

</mapper>


