  </resultMap>

  <resultMap id="Statistics" type="com.kclm.owep.entity.StudyRecordStatistics">
    <result column="total_video_rate" jdbcType="DOUBLE" property="totalVideoRate"/>
    <result column="total_video_length" jdbcType="DOUBLE" property="totalVideoLength"/>
    <association property="student" column="fk_student_id" javaType="student" select="com.kclm.owep.mapper.StudentMapper.selectById"/>
  </resultMap>
  <select id="selectById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select * from t_studyrecord
    where id = #{value}
  </select>
  <delete id="deleteById" parameterType="java.lang.Integer">
    delete from t_studyrecord
    where id = #{value}
  </delete>



  <insert id="save" parameterType="com.kclm.owep.entity.StudyRecord">
