<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kclm.owep.mapper.CourseCategoryMapper">
  <resultMap id="BaseResultMap" type="com.kclm.owep.entity.CourseCategory">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="category_name" jdbcType="VARCHAR" property="categoryName" />
    <result column="category_desc" jdbcType="VARCHAR" property="categoryDesc" />
  <!--  <result column="fk_parent_id" jdbcType="INTEGER" property="fkParentId" />-->
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="delete" jdbcType="VARCHAR" property="delete" />
    <result column="version" jdbcType="INTEGER" property="version" />
    <result column="last_access_time" jdbcType="TIMESTAMP" property="lastAccessTime" />
  </resultMap>

  <!--所有字段-->
  <sql id="Base_Column_List">
    id, category_name, category_desc, fk_parent_id, create_time, `delete`, version, last_access_time
  </sql>

  <!--添加课程分类-->
  <insert id="save" parameterType="CourseCategory">
    insert into t_course_category
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="categoryName != null">
        category_name,
      </if>
      <if test="categoryDesc != null">
        category_desc,
      </if>
      <if test="courseCategory.id != null">
        fk_parent_id,
      </if>
      <if test="createTime != null">
        create_time,
      </if>
      <if test="delete != null">
        delete,
      </if>
      <if test="version != null">
        version,
      </if>
      <if test="lastAccessTime != null">
        last_access_time,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id,jdbcType=INTEGER},
      </if>
      <if test="categoryName != null">
        #{categoryName,jdbcType=VARCHAR},
      </if>
      <if test="categoryDesc != null">
        #{categoryDesc,jdbcType=VARCHAR},
      </if>
      <if test="courseCategory.id != null">
        #{courseCategory.id,jdbcType=INTEGER},
      </if>
      <if test="createTime != null">
        #{createTime,jdbcType=TIMESTAMP},
      </if>
      <if test="delete != null">
        #{delete,jdbcType=VARCHAR},
      </if>
      <if test="version != null">
        #{version,jdbcType=INTEGER},
      </if>
      <if test="lastAccessTime != null">
        #{lastAccessTime,jdbcType=TIMESTAMP},
      </if>
    </trim>
  </insert>

  <!--修改课程分类-->
  <update id="update" parameterType="courseCategory">
      update t_course_category
      <set>
        <if test="categoryName != null">
          category_name = #{categoryName,jdbcType=VARCHAR},
        </if>
        <if test="categoryDesc != null">
          category_desc = #{categoryDesc,jdbcType=VARCHAR},
        </if>
        <if test="courseCategory.id != null">
          fk_parent_id = #{courseCategory.id,jdbcType=INTEGER},
        </if>
        <if test="createTime != null">
          create_time = #{createTime,jdbcType=TIMESTAMP},
        </if>
        <if test="delete != null">
          delete = #{delete,jdbcType=VARCHAR},
        </if>
        <if test="version != null">
          version = #{version,jdbcType=INTEGER},
        </if>
        <if test="lastAccessTime != null">
          last_access_time = #{lastAccessTime,jdbcType=TIMESTAMP},
        </if>
      </set>
      where id = #{id,jdbcType=INTEGER}
  </update>

  <!--通过id删除课程分类-->
  <delete id="deleteById" parameterType="Integer">
    delete from t_course_category where id = #{id}
  </delete>

  <!--删除所选的课程分类-->
  <delete id="deleteSelect" >
    delete from  t_course_category where id in
    <foreach collection="list" separator="," open="(" close=")" item="id"></foreach>
  </delete>

  <!--查询所有的上级课程分类-->
  <select id="selectAll" resultType="courseCategory">
    select
    <include refid="Base_Column_List"/>
    from t_course_category where fk_parent_id = null
  </select>

  <!--通过上级id 查询下级所有的课程分类-->
  <select id="selectSubAll" parameterType="Integer" resultType="courseCategory">
    select <include refid="Base_Column_List"/>
    from t_course_category where fk_parent_id = #{id}
  </select>

  <!--通过分类名称查询课程分类-->
  <select id="selectByCategoryName" parameterType="String" resultType="courseCategory">
    select <include refid="Base_Column_List"/>
    from t_course_category where category_name = #{categoryName}
  </select>


</mapper>