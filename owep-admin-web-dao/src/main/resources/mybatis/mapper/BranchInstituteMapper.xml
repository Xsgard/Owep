<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--用户表的SQL操作-->
<mapper namespace="com.kclm.owep.mapper.BranchInstituteMapper">

    <!--实体属性对应相应的表字段-->
    <resultMap id="BaseResultMap" type="com.kclm.owep.entity.BranchInstitute">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="branch_name" jdbcType="VARCHAR" property="branchName"/>
<!--        <result column="fk_org_id" jdbcType="INTEGER" property="orgInstitute.id"/>-->
        <result column="version" jdbcType="INTEGER" property="version"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="last_access_time" jdbcType="TIMESTAMP" property="lastAccessTime"/>
    </resultMap>
    <!--封装表字段名，方便后续简写使用-->
    <sql id="Base_Column_List">
        id,
        branch_name,
        fk_org_id,
        last_access_time,
        create_time,
        version
    </sql>

    <insert id="save">
        insert into t_branch_institute
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="branchName!=null and branchName !=''">
                branch_name,
            </if>
            <if test="orgInstitute.id!=null">
                fk_org_id,
            </if>
            <if test="version!=null">
                version,
            </if>
            <if test="createTime!=null">
                create_time,
            </if>
            <if test="lastAccessTime !=null">
                last_access_time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="branchName!=null and branchName !=''">
                #{branchName,jdbcType=VARCHAR},
            </if>
            <if test="orgInstitute.id!=null">
                #{orgInstitute.id,jdbcType=INTEGER},
            </if>
            <if test="version!=null">
                #{version,jdbcType=INTEGER},
            </if>
            <if test="createTime!=null">
                #{createTime,jdbcType=TIMESTAMP},
            </if>
            <if test="lastAccessTime !=null ">
                #{lastAccessTime,jdbcType=TIMESTAMP},
            </if>
        </trim>
    </insert>

    <update id="update" parameterType="com.kclm.owep.entity.BranchInstitute">
        update t_branch_institute
        <set>
            <if test="branchName!=null and branchName !=''">
                branch_name=#{branch_name,jdbcType=VARCHAR},
            </if>
            <if test="orgInstitute.id!=null">
                fk_org_id=#{fk_org_id,jdbcType=INTEGER},
            </if>
            <if test="version!=null">
                version=#{version},
            </if>
            <if test="createTime!=null">
                create_time=#{createTime},
            </if>
            <if test="lastAccessTime !=null and lastAccessTime!='' ">
                last_access_time=#{lastAccessTime},
            </if>
        </set>
        where id=#{id,jdbcType=INTEGER}
    </update>

    <delete id="deleteById" parameterType="java.lang.Integer">
        delete
        from t_branch_institute
        where id = #{id};
    </delete>

    <delete id="deleteSelect" parameterType="java.lang.Integer">
        delete t_branch_institute
        where id in
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>