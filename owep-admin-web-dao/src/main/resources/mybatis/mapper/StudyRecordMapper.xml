  <update id="update" parameterType="com.kclm.owep.entity.StudyRecord">
    update t_studyrecord
    <set>
      <if test="progressStatus != null">
        progress_status = #{progressStatus,jdbcType=INTEGER},
      </if>
      <if test="fkStudentId != null">
        fk_student_id = #{fkStudentId,jdbcType=INTEGER},
      </if>
      <if test="fkSectionId != null">
        fk_section_id = #{fkSectionId,jdbcType=INTEGER},
      </if>
      <if test="courseName != null">
        course_name = #{courseName,jdbcType=VARCHAR},
      </if>
      <if test="chapterName != null">
        chapter_name = #{chapterName,jdbcType=VARCHAR},
      </if>
      <if test="sectionName != null">
        section_name = #{sectionName,jdbcType=VARCHAR},
      </if>
      <if test="videoRate != null">
        video_rate = #{videoRate,jdbcType=DOUBLE},
      </if>
      <if test="videoLength != null">
        video_length = #{videoLength,jdbcType=INTEGER},
      </if>
      version = version + 1,
      last_access_time = now()
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>


  <select id="countStudyRecord" resultType="integer">
    select count(*) from t_studyrecord
  </select>

    <select id="selectAll" resultMap="BaseResultMap">
        select * from t_studyrecord
    </select>

  <delete id="deleteSelect" parameterType="list">
    delete from t_studyrecord where id in
    <foreach collection="list" open="(" close=")" separator="," item="id">
      #{id}
    </foreach>
  </delete>

  <select id="selectByKeyword" resultMap="BaseResultMap">
    select *
    from t_studyrecord
    where
    fk_student_id in
    (select id from t_student
    where fk_class_id in
    (select id from t_class
    where
    <if test="orgName != null and orgName != ''">
      institute_name = #{orgName}
    </if>
    <if test="branchName != null and branchName != ''">
      and branch_name = #{branchName}
    </if>
    <if test="pid != null">
      and fk_profession_id = #{pid}
    </if>
    )
    <if test="cid != null">
      and fk_class_id = #{cid}
    </if>
    )
  </select>

    <select id="selectAllStudyRecordStatistics" resultMap="Statistics">
        select sum(video_rate) total_video_rate,
        sum(video_length) total_video_length,
        fk_student_id
        from t_studyrecord
        group by fk_student_id
    </select>

  <select id="selectStudyRecordStatisticsByKeyword" resultMap="Statistics">
    select sum(video_rate) total_video_rate,
    sum(video_length) total_video_length,
    fk_student_id
    from t_studyrecord
    where
    fk_student_id in
    (select id from t_student
    where fk_class_id in
    (select id from t_class
    where
    <if test="orgName != null and orgName != ''">
      institute_name = #{orgName}
    </if>
    <if test="branchName != null and branchName != ''">
      and branch_name = #{branchName}
    </if>
    <if test="pid != null">
      and fk_profession_id = #{pid}
    </if>
    )
    <if test="cid != null">
      and fk_class_id = #{cid}
    </if>
    )
  </select>


</mapper>